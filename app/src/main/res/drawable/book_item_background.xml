<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <!-- Solid Color -->
            <solid android:color="#F5F5F5"/>  <!-- Light gray color -->

            <!-- Corners -->
            <corners android:radius="8dp"/>  <!-- Rounded corners with 8dp radius -->

            <!-- Border (Optional) -->
            <stroke android:width="1dp" android:color="#DADADA"/> <!-- 1dp border with a slightly darker gray color -->
        </shape>
    </item>
</selector>
